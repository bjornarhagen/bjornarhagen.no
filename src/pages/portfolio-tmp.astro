---
import Layout from "../layouts/Layout.astro";
import ContentSection from "../components/dumb/ContentSection.astro";
import Icon from "@/components/dumb/Icon.astro";
import { Dribbble } from "lucide";
---

<Layout marginForNav={false} marginForFooter={false}>
    <main>
        <ContentSection className="relative">
            <section
                class="md:grid md:grid-cols-12 font-paragraph min-h-screen"
            >
                <div
                    class="md:sticky md:top-24 md:col-span-4 border-b border-b-border md:border-r md:border-b-0 md:border-r-border pb-8 md:pb-0 pt-24 md:pr-8"
                >
                    <div class="relative inline-block">
                        <span
                            class="font-heading text-8xl absolute top-1/2 -translate-y-1/2 left-0 right-0 mx-auto opacity-25 text-center pointer-events-none"
                        >
                            <!-- <span class="whitespace-nowrap">/now</span> -->
                        </span>
                        <h2 class="font-heading text-3xl">Portfolio</h2>
                        <p>
                            I have yet to build a proper page for my portfolio,
                            but you can find my work on these links.
                        </p>
                    </div>
                </div>
